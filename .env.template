
# --- Core Django Settings ---
# A strong, unique secret key. You can generate one using Django's management commands.
SECRET_KEY=your-super-secret-key-goes-here

# Set to False in production for security.
DEBUG=True

# A comma-separated list of hosts that can serve the site.
# In production, this should be your domain name(s), e.g., 'www.example.com,api.example.com'
ALLOWED_HOSTS=localhost,127.0.0.1,service-backend

# --- PostgreSQL Database Settings ---
# These must match the POSTGRES_* variables in docker-compose.yml
DB_ENGINE=django.db.backends.postgresql
DB_NAME=
DB_USER=
DB_PASSWORD=
DB_HOST=service-postgres
DB_PORT=5432

# --- Redis / Celery Settings ---
# This URL points to the redis service defined in docker-compose.yml
CELERY_BROKER_URL=redis://service-redis:6379/0
CELERY_RESULT_BACKEND=redis://service-redis:6379/0

# --- AI Provider Settings ---
# Fill these in with the actual credentials and configuration for your AI services.
OLLAMA_CLOUD_API_KEY=
OLLAMA_CLOUD_API_URL=https://ollama.com/api/chat
OLLAMA_CLOUD_MODEL_gpt_oss_20b=gpt-oss:20b-cloud
OLLAMA_CLOUD_MODEL_gpt_oss_20b_display_name="GPT-OSS 20B"
OLLAMA_CLOUD_API_KEY_FOR_TESTING_IN_THE_AI_INTEGRATION_APP=

